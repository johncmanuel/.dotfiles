{
	"workbench.startupEditor": "newUntitledFile",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.formatOnPaste": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"diffEditor.ignoreTrimWhitespace": false,
	// https://commitmono.com/
	"editor.fontFamily": "CommitMono",
	"editor.fontWeight": "400",
	"editor.fontLigatures": true,
	"editor.formatOnSave": true,
	"[python]": {
		"editor.formatOnType": true
	},
	"[ini]": {},
	"terminal.integrated.fontFamily": "monospace",
	"editor.mouseWheelZoom": true,
	"files.associations": {
		"*.ini": "plaintext"
	},
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"svelte.enable-ts-plugin": true,
	"terminal.integrated.mouseWheelScrollSensitivity": 0.4,
	"vscode-pets.theme": "forest",
	"go.toolsManagement.autoUpdate": true,
	"dotnetAcquisitionExtension.enableTelemetry": false,
	"telemetry.telemetryLevel": "off",
	"github.copilot.enable": {
		"*": true,
		"plaintext": false,
		"markdown": false,
		"scminput": false,
		"csharp": true,
		"typescript": true
	},
	"workbench.colorTheme": "One Hunter Flexoki Dark",
	"workbench.colorCustomizations": {
		"[One Hunter Flexoki Dark]": {
			"activityBarBadge.background": "#205EA6",
			// "activityBarBadge.background": "#007acc", -> default vscode color
			"activityBarBadge.foreground": "#ffffff",
			"button.background": "#205EA6",
			"button.foreground": "#ffffff",
			"badge.background": "#205EA6",
			"badge.foreground": "#ffffff",
			"sideBarSectionHeader.background": "#100F0F",
			"focusBorder": "#205EA6"
		}
	},
	"editor.minimap.enabled": false,
	"vscode-pets.petType": "totoro",
	"editor.smoothScrolling": true,
	"terminal.integrated.smoothScrolling": true,
	"workbench.list.smoothScrolling": true
}
